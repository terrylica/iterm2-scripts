# Brewfile - Complete iTerm2 Layout Manager installation
# Usage: brew bundle --file=Brewfile

# Tap the repository (two-arg form for non-standard structure)
tap "terrylica/iterm2-scripts", "https://github.com/terrylica/iterm2-scripts"

# Required dependencies
brew "python@3.11"
brew "uv"

# Recommended tools
brew "broot"
cask "swiftdialog"

# The main formula
brew "terrylica/iterm2-scripts/iterm2-layout-manager"
